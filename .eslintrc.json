{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        // enable additional rules
        "indent": ["error", 4],
        // "linebreak-style": ["error", "unix"],
        // "quotes": ["error", "double"],
        "semi": ["error", "always"] //,
    
        // override default options for rules from base configurations
        // "comma-dangle": ["error", "always"],
        // "no-cond-assign": ["error", "always"],
    
        // disable rules from base configurations
        // "no-console": "off"
    }
}
